<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pokedex"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pokedex_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.PokedexActivity"
            android:parentActivityName=".View.DashboardActivity"></activity>
        <activity
            android:name=".View.CapturarActivity"
            android:parentActivityName=".View.AtraparActivity" />
        <activity
            android:name=".View.AtraparActivity"
            android:parentActivityName=".View.DashboardActivity" />
        <activity android:name=".View.DashboardActivity" />
        <activity android:name=".View.RegistroActivity" />
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>