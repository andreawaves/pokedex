<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verde"
    tools:context=".View.DashboardActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="180dp"
        >
        

        <Button
            android:id="@+id/btn_pokedex"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:backgroundTint="#F3F1F1"
            android:fontFamily="@font/numans"
            android:shadowColor="#FFFFFF"
            android:text="Mi PÃ³kedex"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/btn_atrapar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:backgroundTint="#F3F1F1"
            android:fontFamily="@font/numans"
            android:shadowColor="#FFFFFF"
            android:text="Atrapar"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>