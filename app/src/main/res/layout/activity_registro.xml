<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verde"
    tools:context=".View.RegistroActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:id="@+id/x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Registro"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            android:textStyle="bold"
            app:fontFamily="@font/numans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.19">

        <EditText
            android:id="@+id/et_iusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ems="10"
            android:fontFamily="@font/numans"
            android:hapticFeedbackEnabled="false"
            android:hint="Ingrese usuario"
            android:inputType="text"
            android:singleLine="false"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorGris"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:typeface="monospace" />


        <EditText
            android:id="@+id/et_ipassword1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ems="10"
            android:fontFamily="@font/numans"
            android:hapticFeedbackEnabled="false"
            android:hint="Ingrese password"
            android:inputType="textPassword"
            android:singleLine="false"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorGris"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/et_ipassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ems="10"
            android:fontFamily="@font/numans"
            android:hapticFeedbackEnabled="false"
            android:hint="Reingrese password"
            android:inputType="textPassword"
            android:singleLine="false"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textColorHint="@color/colorGris"
            android:textColorLink="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="#F3F1F1"
            android:fontFamily="@font/numans"
            android:text="Guardar"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>